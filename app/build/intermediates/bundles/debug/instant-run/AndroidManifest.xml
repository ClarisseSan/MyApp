<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gerry.myapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gerry.myapp.movies.activity.PopularMoviesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/pop_movies"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.gerry.myapp.movies.activity.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.gerry.myapp.movies.activity.PopularMoviesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gerry.myapp.movies.activity.MovieDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName="com.gerry.myapp.movies.activity.PopularMoviesActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".movies.activity.PopularMoviesActivity" />
        </activity>
        <activity
            android:name="com.gerry.myapp.movies.activity.FavorActivity"
            android:label="@string/title_activity_favor"
            android:parentActivityName="com.gerry.myapp.movies.activity.PopularMoviesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".movies.activity.PopularMoviesActivity" />
        </activity>
        <activity
            android:name="com.gerry.myapp.movies.carousel.MainCarousel"
            android:label="@string/title_activity_main_carousel" />
        <activity
            android:name="com.gerry.myapp.movies.activity.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>