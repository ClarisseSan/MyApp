

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.gerry.myapp.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDark"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/nano"
        android:background="@color/colorRed"
        android:textColor="@color/colorWhite"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textAlignment="center"/>




    <Button
        android:id="@+id/btn_movie"
        style="@style/CustomButtonStyle"
        android:text="@string/pop_movies"
        android:background="@color/colorB1"/>

    <Button
        android:id="@+id/btn_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_hawk"
        android:onClick="sendMessage"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/colorB2"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_build"
        android:text="@string/build_it"
        style="@style/CustomButtonStyle"
        android:background="@color/colorB3"/>



    <Button
        android:id="@+id/btn_make"
        android:text="@string/make_app"
        style="@style/CustomButtonStyle"
        android:background="@color/colorB4"/>


    <Button
        android:id="@+id/btn_go"
        android:text="@string/go_ubi"
        android:background="@color/colorB5"
        style="@style/CustomButtonStyle"/>



    <Button
        android:id="@+id/btn_capstone"
        android:text="@string/capstone"
        style="@style/CustomButtonStyle"
        android:background="@color/colorB6" />

   </LinearLayout>

</ScrollView>